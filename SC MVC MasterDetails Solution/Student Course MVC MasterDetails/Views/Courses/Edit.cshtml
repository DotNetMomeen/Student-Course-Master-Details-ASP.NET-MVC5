@model Student_Course_MVC_MasterDetails.Models.Course

@{
    ViewBag.Title = "Edit";
}

<div class="container mt-5">
    <h2 class="display-4 text-center mb-4">Edit Course Info</h2>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            @using (Html.BeginForm("Edit", "Courses", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="card shadow-sm">
                    <div class="card-body">
                        <!-- Course Name Input -->
                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.CourseName, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.CourseName, new { @class = "form-control", placeholder = "Enter course name" })
                            @Html.ValidationMessageFor(model => model.CourseName, "", new { @class = "text-danger" })
                        </div>

                        <!-- Submit and Back Buttons -->
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fa fa-save"></i> Save
                            </button>

                        </div>
                    </div>
                </div>
            }

        </div>

    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index","Courses")" class="btn btn-link">
            <i class="fa fa-arrow-circle-o-left"></i> Back to List
        </a>
    </div>

</div>








