@model Student_Course_MVC_MasterDetails.Models.ViewModels.StudentVM
@{
    ViewBag.Title = "Create";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0 text-center">Create New Student Information</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Students", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <!-- Student Information Section -->
                    <div class="col-md-6">
                        <h4 class="mb-3">Personal Information</h4>

                        <!-- Student Name -->
                        <div class="form-group row mb-3">
                            @Html.LabelFor(x => x.StudentName, htmlAttributes: new { @class = "col-form-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(x => x.StudentName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.StudentName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Birth Date -->
                        <div class="form-group row mb-3">
                            @Html.LabelFor(x => x.BirthDate, htmlAttributes: new { @class = "col-form-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(x => x.BirthDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Age -->
                        <div class="form-group row mb-3">
                            @Html.LabelFor(x => x.Age, htmlAttributes: new { @class = "col-form-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Age, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Picture Upload -->
                        <div class="form-group row mb-3">
                            @Html.LabelFor(x => x.PictureFile, htmlAttributes: new { @class = "col-form-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(x => x.PictureFile, new { @class = "form-control", type = "file" })
                                @Html.ValidationMessageFor(x => x.PictureFile, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Marital Status -->
                        <div class="form-group row mb-3">
                            @Html.LabelFor(x => x.MaritalStatus, htmlAttributes: new { @class = "col-form-label col-sm-4" })
                            <div class="col-sm-8 d-flex align-items-center">
                                @Html.CheckBoxFor(x => x.MaritalStatus, new { @class = "mr-2" })
                                <span>Marital Status</span>
                            </div>
                            <div class="col-sm-8 offset-sm-4">
                                @Html.ValidationMessageFor(x => x.MaritalStatus, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <!-- Course Information Section -->
                    <div class="col-md-6">
                        <h4 class="mb-3">Course Information</h4>
                        <div class="d-flex justify-content-end mb-3">
                            <a href="#" id="btnPlus" class="btn btn-outline-primary btn-sm"><i class="fa fa-plus"></i> Add Course</a>
                        </div>
                        <div id="courseContainer" class="border rounded p-3 bg-light">
                            @Html.Action("AddNewCourse", "Students")
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-4">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
    <div class="mt-3">
        <a href="@Url.Action("Index")" class="btn btn-link">
            <i class="fa fa-arrow-circle-o-left"></i> Back to List
        </a>
    </div>
</div>




